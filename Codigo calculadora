#include <stdio.h>

int main() {
    float num1, num2; // variáveis para armazenar os números

    // Solicita os números ao usuário
    printf("Digite o primeiro numero: ");
    scanf("%f", &num1);

    printf("Digite o segundo numero: ");
    scanf("%f", &num2);

    // Exibe os resultados das quatro operações
    printf("\n=== Resultados ===\n");
    printf("Soma: %.2f\n", num1 + num2);
    printf("Subtracao: %.2f\n", num1 - num2);
    printf("Multiplicacao: %.2f\n", num1 * num2);

    // Verifica divisão por zero
    if (num2 != 0)
        printf("Divisao: %.2f\n", num1 / num2);
    else
        printf("Divisao: Erro! Nao e possivel dividir por zero.\n");

    return 0;
}
